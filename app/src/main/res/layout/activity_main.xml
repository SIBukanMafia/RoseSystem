<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pelayan"
        android:id="@+id/btn_pelayan"
        android:onClick="selectPelayan"
        android:layout_marginTop="27dp"
        android:textSize="@dimen/abc_action_bar_stacked_max_height"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kasir"
        android:id="@+id/btn_kasir"
        android:onClick="selectKasir"
        android:textSize="@dimen/abc_action_bar_stacked_max_height"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/btn_pelayan"
        android:layout_alignStart="@+id/btn_pelayan"
        android:layout_alignEnd="@+id/btn_pelayan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="koki"
        android:id="@+id/btn_koki"
        android:textSize="@dimen/abc_action_bar_stacked_max_height"
        android:onClick="selectKoki"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/btn_kasir"
        android:layout_alignStart="@+id/btn_kasir"
        android:layout_alignEnd="@+id/btn_kasir" />

</RelativeLayout>
