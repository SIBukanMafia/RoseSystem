<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kasir"
        android:id="@+id/btn_kasir"
        android:layout_alignParentStart="true"
        android:onClick="selectKasir" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="koki"
        android:id="@+id/btn_koki"
        android:layout_below="@+id/btn_kasir"
        android:layout_alignParentStart="true"
        android:onClick="selectKoki" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pelayan"
        android:id="@+id/btn_pelayan"
        android:layout_below="@+id/btn_koki"
        android:layout_alignParentStart="true"
        android:onClick="selectPelayan" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="menu"
        android:id="@+id/btn_menu"
        android:layout_below="@+id/btn_pelayan"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn_pelayan"
        android:onClick="selectMenu" />

</RelativeLayout>
